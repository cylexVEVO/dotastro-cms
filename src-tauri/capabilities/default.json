{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "/**/*"
        },
        {
          "path": "C:/**/*"
        }
      ]
    },
    "fs:default",
    "fs:allow-app-read",
    "fs:allow-watch",
    "fs:allow-unwatch"
  ]
}
